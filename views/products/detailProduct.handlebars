<script>
    function showImage(str) {
        $("#img-container").attr("src", str);
    }

    function increaseValue(money, max) {
        var value = parseInt(document.getElementById('text-price').value, 10);
        value = value + money;
        document.getElementById('lower').setAttribute('hidden', '');
        document.getElementById('sure').setAttribute('hidden', '');
        document.getElementById('nomoney').setAttribute('hidden', '');
        if(value >= max){
            document.getElementById('higher').removeAttribute('hidden');
            return;
        }
        document.getElementById('text-price').value = value;
        }

    function decreaseValue(money, min) {
        var value = parseInt(document.getElementById('text-price').value, 10);
        value = value - money;
        document.getElementById('higher').setAttribute('hidden', '');
        document.getElementById('sure').setAttribute('hidden', '');
        document.getElementById('nomoney').setAttribute('hidden', '');
        if(value <= min){
            document.getElementById('lower').removeAttribute('hidden');
            return;
        }
        document.getElementById('text-price').value = value;
    }

    function toggleHidden(money) {
        document.getElementById('sure').setAttribute('hidden', '');
        document.getElementById('lower').setAttribute('hidden', '');
        document.getElementById('higher').setAttribute('hidden', '');
        count = 0;
        document.getElementById('text-price').value = money;
        document.getElementById('nomoney').setAttribute('hidden', '');
    }

    function toggleHidden2() {
        document.getElementById('sure2').setAttribute('hidden', '');
        document.getElementById('nomoney2').setAttribute('hidden', '');
        count = 0;
    }

    let count = 0;
    function bid(id, money) {
        if (count == 0) {
            document.getElementById('lower').setAttribute('hidden', '');
            document.getElementById('higher').setAttribute('hidden', '');
            document.getElementById('sure').removeAttribute('hidden');
            document.getElementById('nomoney').setAttribute('hidden', '');
            count++;
        }
        else if(parseInt(document.getElementById('text-price').value, 10) > money){
            document.getElementById('nomoney').removeAttribute('hidden');
            document.getElementById('sure').setAttribute('hidden', '');
        }
        else {
            let data = { id: id, price: $("#text-price").val(), money: money };
            $.ajax({
                type: "POST",
                url: '/bidder/product/bid_product',
                data: data,
                success: function (result) {
                    if (result.success) {
                        location.reload();
                    }
                },
            });
        }
    }

    function buy(id, money){
        if (count == 0) {
            document.getElementById('sure2').removeAttribute('hidden');
            document.getElementById('nomoney2').setAttribute('hidden', '');
            count++;
        }
        else if(parseInt(document.getElementById('text-buy-price').value, 10) > money){
            document.getElementById('nomoney2').removeAttribute('hidden');
            document.getElementById('sure2').setAttribute('hidden', '');
        }
        else{
            let data = { id: id, price: $("#text-buy-price").val(), money: money };
            $.ajax({
                type: "POST",
                url: '/bidder/product/buy_product_now',
                data: data,
                success: function (result) {
                    if (result.success) {
                        location.reload();
                    }
                },
            });
        }
    }

    function addToFav(id) {
        event.preventDefault();
        $.ajax({
            global: false,
            type: 'POST',
            url: '/bidder/product/fav',
            dataType: 'html',
            data: {
                id
            },
            success: function (result) {
                console.log(result);
            },
            error: function (request, status, error) {
                serviceError();
            }
        });
    }
   function deleteBidder(number,id){
       console.log("number: ",number,"id: ",id);
        $.ajax({
            global: false,
            type: 'POST',
            url: '/bidder/product/del',
          
            data: {
                id,
                number
            },
            success: function (result) {
                
                 if (result.success == true) {
                 
                        location.reload();
                    }
            },
            error: function (request, status, error) {
                serviceError();
            }
        });
   }
</script>
