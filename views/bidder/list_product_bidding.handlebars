                            <tr>
                                <th scope="col" width="5%" style="font-weight:bold;">STT</th>
                                <th scope="col" width="19%" style="font-weight:bold;">Tên sản phẩm</th>
                                <th scope="col" width="8%" style="font-weight:bold;">Chuyên mục</th>
                                <th scope="col" width="6%" style="font-weight:bold;">Người bán</th>
                                <th scope="col" width="7%" style="font-weight:bold;">Giá đã đặt</th>
                                <th scope="col" width="7%" style="font-weight:bold;">Giá cao nhất</th>
                                <th scope="col" width="6%" style="font-weight:bold;">Bội số</th>
                                <th scope="col" width="10%" style="font-weight:bold;">Ngày bắt đầu</th>
                                <th scope="col" width="10%" style="font-weight:bold;">Ngày kết thúc</th>
                                <th scope="col" width="10%" style="font-weight:bold;">Ngày ra giá</th>
                                <th scope="col" width="10%" style="font-weight:bold;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each this.listProduct}}
                            <tr>
                                <th scope="row" class="text-center">{{#if top_bidder}}<i
                                        class="fa fa-trophy"></i>{{/if}}&nbsp;{{id}}</th>
                                <td>{{name}}</td>
                                <td>{{cat_name}}</td>
                                <td>{{seller}}</td>
                                <td class="text-right">{{format price}}</td>
                                <td class="text-right">{{format top_price}}</td>
                                <td class="text-right">{{format min_increase}}</td>
                                <td>{{start_date_format}}</td>
                                <td>{{end_date_format}}</td>
                                <td>{{day_bidder}}</td>
                                <td>
                                    <a class="btn btn-success my-category-button" href="/category/products/{{id}}"><i
                                            class="fa fa-arrow-right"></i></a>
                                </td>
                            </tr>
