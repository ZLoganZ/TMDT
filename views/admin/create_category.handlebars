<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Quản lý</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>

    <!-- Bootstrap core CSS     -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css">

    <!--  Light Bootstrap Table core CSS    -->
    <link href="/static/css/light-bootstrap-dashboard.css?v=1.4.0" rel="stylesheet" />

    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <!-- Theme included stylesheets -->
    <link href="https://cdn.quilljs.com/1.1.9/quill.snow.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-color="red" data-image="/assets/img/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/" class="simple-text">
                        English Auction
                    </a>
                </div>

                <ul class="nav">
                    {{#if isAuthenticated}}
                    <li class="pl-3 my-li-dashboard">
                        <a href="/account/profile">
                            <i class="pe-7s-graph"></i>
                            <p class="mb-0">Thông tin cá nhân</p>
                        </a>
                    </li>
                    {{/if}}
                    {{#if isSeller}}
                    <li class="pl-3 my-li-dashboard">
                        <a href="/seller/product/">
                            <i class="pe-7s-note2"></i>
                            <p class="mb-0">Các sản phẩm đang bán</p>
                        </a>
                    </li>
                    <li class="pl-3 my-li-dashboard">
                        <a href="/seller/product/selled">
                            <i class="pe-7s-note2"></i>
                            <p class="mb-0">Các sản phẩm đã bán</p>
                        </a>
                    </li>
                    {{/if}}
                    {{#if isAdmin}}
                    <li class="pl-3 my-li-dashboard my-active">
                        <a href="/admin/category">
                            <i class="pe-7s-news-paper"></i>
                            <p class="mb-0">Quản lý danh mục</p>
                        </a>
                    </li>
                    <li class="pl-3 my-li-dashboard">
                        <a href="/admin/product">
                            <i class="pe-7s-science"></i>
                            <p class="mb-0">Quản lý sản phẩm</p>
                        </a>
                    </li>
                    <li class="pl-3 my-li-dashboard">
                        <a href="/admin/user">
                            <i class="pe-7s-map-marker"></i>
                            <p class="mb-0">Quản lý người dùng</p>
                        </a>
                    </li>
                    {{/if}}
                    {{#if isBidder}}
                    <li class="pl-3 my-li-dashboard">
                        <a href="/bidder/product/list_bidding">
                            <i class="pe-7s-news-paper"></i>
                            <p class="mb-0">Các sản phẩm đang đấu giá</p>
                        </a>
                    </li>
                    <li class="pl-3 my-li-dashboard">
                        <a href="/bidder/product/winner">
                            <i class="pe-7s-science"></i>
                            <p class="mb-0">Các sản phẩm đã thắng</p>
                        </a>
                    </li>
                    {{/if}}
                    {{#if isAuthenticated}}
                    <li class="pl-3 my-li-dashboard">
                        <a href="javascript: logOut()">
                            <i class="pe-7s-graph"></i>
                            <p class="mb-0">Đăng xuất</p>
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">Thêm chuyên mục</a>
                    </div>
                </div>
            </nav>

            <form method="POST" id="form-create-category">
                <div class="row mt-5 form-group">
                    <div class="col-sm-3 text-right">
                        <label for="cat-name">Tên chuyên mục:</label>
                    </div>
                    <div class="col-sm-6">
                        <input type="text" class="my-product-input" name="name" id="cat-name"
                            placeholder="Chuyên mục abcxyz" autofocus />
                    </div>
                </div>

                <div class="row mt-2 form-group">
                    <div class="col-sm-3 text-right">
                        <label>Chuyên mục</label>
                    </div>
                    <div class="col-sm-6">
                        <select id="selectbox" class="my-product-select" data-selected="" name="parent_id">
                            <option value="" selected="selected" disabled="disabled" value="0">Vui lòng chọn 1 chuyên
                                mục</option>
                            {{#each this.categories}}
                            <option value="{{id}}">{{name}}</option>
                            {{/each}}
                            {{!-- <option value="1">Laptop</option>
                                <option value="2">Laptop</option>
                                <option value="3">Laptop</option>
                                <option value="4">Laptop</option>
                                <option value="5">Laptop</option> --}}
                        </select>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-sm-9 d-flex justify-content-end">
                        <button type="submit" class="btn btn-success mr-3"><i class="fa fa-save"></i>&nbsp;Lưu</button>
                        <a class="btn btn-danger" href="/admin/category"><i class="fa fa fa-arrow-left"></i>&nbsp;Quay
                            lại</a>
                    </div>
                </div>
            </form>

            <footer class="footer mt-2">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="#">
                                    Trang chủ
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Công ty
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Danh mục đầu tư
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Blog
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        <a href="#">English Auction</a>
                    </p>
                </div>
            </footer>
        </div>
    </div>

    <script type="text/javascript">
        $("#form-create-category").submit(function (event) {
            let listCategory = [];
            $.ajax({
                url: "/admin/category/get_all_category",
                type: "get",
                async: false,
                success: function (data, statusRequest) {
                    listCategory = data;
                }
            });
            let categoryName = $('#cat-name').val();
            var selectedVal = $("#selectbox option:selected").val();
            if (!categoryName.length) {
                alert("Vui lòng nhập tên chuyên mục");
                event.preventDefault();
            }
            else if (!selectedVal) {
                alert("Vui lòng chọn chuyên mục cha");
                event.preventDefault();
            }
            else {
                for (let i = 0; i < listCategory.length; i++) {
                    if (categoryName === listCategory[i].name) {
                        alert("Tên chuyên mục hiện đã sẵn có");
                        event.preventDefault();
                        break;
                    }
                }
            }
        });

        function logOut() {
            $.ajax({
                async: false,
                type: "POST",
                url: '/account/logout',
            });
            location.reload();
        }
    </script>
</body>

</html>