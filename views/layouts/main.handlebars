                    {{#each lcCategories}}
                    <li>
                        <a href="javascript:;" class="my-button-list d-flex justify-content-center"> <i
                                class="{{icon}}"></i>&nbsp;&nbsp;{{name}}</a>
                        {{#if haveSub}}
                        <ul class="sub_menu">
                            {{#each subcategory}}
                            <li class="d-flex justify-content-between align-items-center">
                                <a href="/category/{{this.id}}/products">{{this.name}}</a>
                                {{#if count}}
                                <span
                                    class="badge badge-danger d-flex align-items-center my-size-small justify-content-center">{{count}}</span>
                                {{/if}}
                                {{#if this.haveSub}}
