                                <div class="widget sw_ajax_woocommerce_search-6 sw_ajax_woocommerce_search pull-left">
                                    <div class="widget-inner">
                                        <a class="search-icon fa fa-search"></a>
                                        <div class="revo_top swsearch-wrapper clearfix">
                                            <div class="top-form top-search non-category">
                                                <div class="topsearch-entry">
                                                    <form onsubmit="false" method="GET" action="/search">
                                                        <div id="sw_woo_search_1" class="search search-group" style="width: 920px; margin-top: 20px;">
                                                            <div class="content-search d-inline-block">
                                                                <select class="my-select-search" name="style" id="style">
                                                                    <option value="0" selected>Tên sản phẩm</option>
                                                                    <option value="1">Tên chuyên mục</option>
                                                                    <option value="2">Tên người đăng</option>
                                                                </select>
                                                                <input class="autosearch-input" type="text" value=""
                                                                    size="50" autocomplete="off"
                                                                    placeholder="Tìm kiếm..." name="search_text" id="search_text">
                                                                <button type="submit"
                                                                    class="fa fa-search button-search-pro form-button"><i
                                                                        class="fas fa-search"></i>&nbsp;&nbsp;Tìm
                                                                    Kiếm</button>
                                                            </div>
                                                            <div class="widget sw_top-4 sw_top d-inline-block">
                                                                <div class="widget-inner">
                                                                    <div>
                                                                        {{#if isAuthenticated}}
                                                                        <ul class="">
                                                                            <li class="nav-item dropdown p-0">
                                                                                <a class="nav-link dropdown-toggle"
                                                                                    href="#" id="navbarDropdown"
                                                                                    role="button" data-toggle="dropdown"
                                                                                    aria-haspopup="true"
                                                                                    aria-expanded="false" style="font-size: 15px; vertical-align: -webkit-baseline-middle;">
                                                                                    Hi, <b>{{authUser.name}}!</b> <br>
                                                                                    Bạn có <b>{{format authUser.money}}</b>
                                                                                </a>
                                                                                <div class="dropdown-menu dropdown-menu-right my-dropdown-item"
                                                                                    aria-labelledby="navbarDropdown">
                                                                                    <a class="dropdown-item"
                                                                                        href="/account/profile" style="font-size: 15px;">
                                                                                        <i class="fa fa-user"
                                                                                            aria-hidden="true"></i>
                                                                                        Thông tin cá nhân
                                                                                    </a>
                                                                                    <a class="dropdown-item"
                                                                                        href="/seller/product" style="font-size: 15px;">
                                                                                        <i class="fas fa-tasks"></i>
                                                                                        Quản lý
                                                                                    </a>
                                                                                    <a class="dropdown-item"
                                                                                        href="javascript: logOut()" style="font-size: 15px;">
                                                                                        <i
                                                                                            class="fas fa-sign-out-alt"></i>
                                                                                        Logout
                                                                                    </a>
                                                                                </div>
                                                                            </li>
                                                                        </ul>
                                                                        {{else}}
                                                                        <ul>
                                                                            <li>
                                                                                <a href="/account/login"><span style="font-size: 15px;"><b>Đăng
                                                                                            nhập/<b>&nbsp;Đăng
                                                                                                ký</b></b></span></a>
                                                                            </li>
                                                                        </ul>
                                                                        {{/if}}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        </div>
    </div>
